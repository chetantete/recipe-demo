<%= turbo_frame_tag dom_id(recipe) do %>
  <div class="card card-body" style="box-shadow: 10px 10px 10px 2px #747979;">
    <div class="mt-2">
      <%= link_to "Edit", edit_recipe_path(recipe), class: 'float-right' %>
    </div>
    <div><b><h2><%= raw(recipe.title) %><h2><b></div>
    <br>
    <%= image_tag recipe.banner, style:'
    margin-left: 10%;border-radius: 1rem;width: 70%;'%>
    <br><div><%= raw recipe.introduction %></div>
    <br><h3> Problem :</h3><hr>
    <div><%= raw recipe.problem %></div>
    <br><h3> Solution :</h3><hr>
    <div><%= raw recipe.solution %></div>
    <br><h3> Discussion :</h3><hr>
    <div><%= raw recipe.discussion %></div>
  </div>
  <br>
<% end %>
