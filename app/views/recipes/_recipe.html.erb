<%= turbo_frame_tag dom_id(recipe) do %>
  <div class="card card-body">
    <%= image_tag recipe.banner
    
 %>

    <div><%= raw(recipe.problem) %></div>
    <div><%= raw(recipe.solution) %></div>
    <div><%= raw(recipe.discussion) %></div>

    <div class="mt-2">
      <%= link_to "Edit", edit_recipe_path(recipe) %>
    </div>
  </div>
<% end %>
